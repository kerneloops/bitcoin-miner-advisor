[Unit]
Description=Bitcoin Miner Daily Advisor
After=network.target

[Service]
User=miner
WorkingDirectory=/home/miner/bitcoin-miner-advisor
EnvironmentFile=/home/miner/bitcoin-miner-advisor/.env
ExecStart=/home/miner/bitcoin-miner-advisor/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
