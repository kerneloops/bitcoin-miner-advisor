POLYGON_API_KEY=your_polygon_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Session signing secret (used for Telegram webhook validation)
SESSION_SECRET=a-long-random-string-for-cookie-signing

# Resend (transactional email for support form — free at resend.com)
RESEND_API_KEY=
SUPPORT_TO_EMAIL=support@lapio.dev

# Multi-user settings
# MAX_USERS caps registrations (default 20)
MAX_USERS=20

# Public URL of this deployment (used to register the Telegram webhook)
APP_BASE_URL=https://lapio.dev

# Google Workspace (optional — export to Sheets)
GOOGLE_SERVICE_ACCOUNT_JSON=/path/to/service-account.json
GOOGLE_SHEET_ID=<spreadsheet-id>

# Scheduled daily analysis (24-hour HH:MM, leave blank to disable)
ANALYSIS_SCHEDULE_TIME=08:00

# FRED API key for macro signals (VIX, 2Y yield, DXY, HY spread) — free at fred.stlouisfed.org
FRED_API_KEY=

# Telegram notifications (optional — alerts on BUY/SELL signals)
# 1. Message @BotFather → /newbot → copy token
# 2. Message your new bot once, then visit:
#    https://api.telegram.org/bot{TOKEN}/getUpdates → copy "id" from result
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
